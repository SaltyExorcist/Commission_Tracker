<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Commission</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Edit Commission</h1>
    <form action="/admin/edit/<%= record._id %>" method="post">
        <div>
            <label for="customerName">Customer Name:</label>
            <input type="text" id="customerName" name="customerName" value="<%= record.customerName %>" required>
        </div>
        <div>
            <label for="contact">Contact:</label>
            <input type="text" id="contact" name="contact" value="<%= record.contact %>" required>
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= record.email %>" required>
        </div>
        <div>
            <label for="salesRep">Sales Rep:</label>
            <select id="salesRep" name="salesRep" required>
                <% salesReps.forEach(function(rep) { %>
                    <option value="<%= rep.name %>" <%= record.salesRep === rep.name ? 'selected' : '' %>><%= rep.name %></option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="service">Service:</label>
            <select id="service" name="service" required>
                <% services.forEach(function(service) { %>
                    <option value="<%= service.name %>" <%= record.services === service.name ? 'selected' : '' %>><%= service.name %></option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="numberOfPeople">Number of People:</label>
            <input type="number" id="numberOfPeople" name="numberOfPeople" value="<%= record.numberOfPeople %>" required>
        </div>
        <button type="submit">Update Commission</button>
    </form>
</body>
</html>
